# 数据库连接信息（生产环境）
MONGO_URI=mongodb://db_user:db_password@mongodb_host:27017/shopdb_production?authSource=admin

# 服务器配置
PORT=5000
NODE_ENV=production

# JWT 配置（生产环境必须使用强密钥）
JWT_SECRET=YOUR_STRONG_JWT_SECRET_KEY_HERE_PLEASE_CHANGE_IN_PRODUCTION
JWT_EXPIRES_IN=7d

# 加密配置
BCRYPT_SALT_ROUNDS=12

# 日志级别
LOG_LEVEL=error

# CORS配置
ALLOWED_ORIGINS=https://your-production-domain.com,https://www.your-production-domain.com

# API端点前缀
API_PREFIX=/api/v1

# 安全头部配置
X_FRAME_OPTIONS=DENY
CONTENT_SECURITY_POLICY=default-src 'self'; script-src 'self' 'unsafe-inline'; style-src 'self' 'unsafe-inline'; img-src 'self' data:;

# 邮件服务配置（请在部署时设置实际值）
SMTP_PASSWORD=your_secure_smtp_password_here

# Twilio短信服务配置（请在部署时设置实际值）
TWILIO_SID=your_twilio_account_sid_here
TWILIO_AUTH_TOKEN=your_twilio_auth_token_here

# Webhook配置
WEBHOOK_API_KEY=your_secure_webhook_api_key_here

# 错误监控配置
SENTRY_DSN=your_sentry_dsn_here

# API配置
API_BASE_URL=https://your-production-api-domain.com
