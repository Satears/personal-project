# ==============================================================
# 环境变量配置模板
# 说明：复制此文件并重命名为 .env 后填入实际值
# ==============================================================

# =================== 数据库配置 ===================
# MongoDB连接字符串
MONGO_URI=mongodb://username:password@host:port/database_name?authSource=admin

# =================== 服务器配置 ===================
# 服务器端口
PORT=5000
# 运行环境 (development/production)
NODE_ENV=development

# =================== 安全配置 ===================
# JWT签名密钥（生产环境必须使用强随机密钥！）
# 生成方法：node -e "console.log(crypto.randomBytes(32).toString('hex'))"
JWT_SECRET=your_strong_jwt_secret_key_here
# JWT过期时间
JWT_EXPIRES_IN=7d
# 密码加密轮数
BCRYPT_SALT_ROUNDS=10

# =================== 日志配置 ===================
# 日志级别 (debug/info/warn/error)
LOG_LEVEL=info

# =================== API配置 ===================
# API基础URL
API_BASE_URL=http://localhost:5000
# API端点前缀
API_PREFIX=/api/v1

# =================== CORS配置 ===================
# 允许的来源（多个用逗号分隔）
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

# =================== 通知服务配置 ===================
# 邮件服务密码
SMTP_PASSWORD=your_smtp_password_here

# =================== Twilio短信服务配置 ===================
# Twilio账户SID
TWILIO_SID=your_twilio_account_sid_here
# Twilio认证令牌
TWILIO_AUTH_TOKEN=your_twilio_auth_token_here

# =================== Webhook配置 ===================
# Webhook API密钥
WEBHOOK_API_KEY=your_webhook_api_key_here

# =================== 错误监控配置 ===================
# Sentry错误监控DSN
SENTRY_DSN=your_sentry_dsn_here

# =================== 安全头部配置 ===================
# X-Frame-Options设置
X_FRAME_OPTIONS=DENY
# Content-Security-Policy设置
CONTENT_SECURITY_POLICY=default-src 'self'; script-src 'self' 'unsafe-inline'; style-src 'self' 'unsafe-inline'; img-src 'self' data:;

# ==============================================================
# 注意事项：
# 1. 生产环境必须设置强密钥，不要使用默认值
# 2. 敏感信息（如密码、令牌）请勿提交到版本控制系统
# 3. 定期更新JWT密钥和其他安全相关配置
# 4. 确保所有环境变量在部署前都已正确配置
# ==============================================================
